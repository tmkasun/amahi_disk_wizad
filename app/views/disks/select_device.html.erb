						library: {legend: {position: 'top'}, \
						is3D: true, \
						pieSliceText: 'percentage', \
						tooltip: {text: 'percentage' }, \
						width: 400, \
						slices: [{color: '#A44585'},{color: '#00B5F0'}] \
						})
%>

					</div>
				</div>
			</div>
			<% end %>
		</div>

		<div class="row">
			<ul class="pager">
				<li class="previous disabled">
					<a href="#">&larr; Back</a>
				</li>
				<li class="next">
					<%= link_to file_system_path do %>
					Next &rarr;
					<% end %>
				</li>
			</ul>

		</div>
	</div>
</div>