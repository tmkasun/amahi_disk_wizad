<div class="panel-body">
	<div class="row">
		<div class="">
			<table class="table table-hover">

				<thead>
					<tr data-toggle="collapse" data-target="#demo1" class="accordion-toggle" style="cursor: pointer" >
						<th class="text-center">Select</th>
						<th class="text-center">Model</th>
						<th class="text-center">Path</th>
						<th class="text-center">Size</th>
						<th class="text-center">Format</th>
					</tr>
				</thead>
				<tbody>
					<%= form_tag(file_system_path,{method: "POST",id:"select_device"}) %>
					<% for record in @new_disks%>
					<tr data-toggle="collapse" data-target= <%= "."+record['KNAME'] %> class="accordion-toggle" style = "cursor: pointer;">
						<td>
						<%= radio_button_tag(:device, record['KNAME']) %>
						</td>
						<td><%= record['MODEL'] || "N/A"%></td>
						<td><%= "/dev/#{record['KNAME']}"%></td>
						<td><%= number_to_human_size record['SIZE'] %></td>
						<td><label>
							<%= check_box_tag(:format) %>
						</label></td>
					</tr>

					<tr >
						<td style="border-top: none;" colspan="6" class="hiddenRow">
						<div class="accordian-body collapse <%= record['KNAME'] %>" >
							<div class="progress">
								<div class="progress-bar progress-bar-success" style="width: 40%">
									<span class="sr-only">sda1</span>
									<span>40% sda1</span>

								</div>
								<div class="progress-bar progress-bar-warning" style="width: 20%">
									<span>20% sda2</span>
								</div>
								<div class="progress-bar progress-bar-danger" style="width: 20%">
									<span>20% sda3</span>
								</div>
								<div class="progress-bar progress-bar" style="width: 20%">
									<span>20% sda3</span>
								</div>
							</div >
						</div></td>
					</tr>
					<tr >
						<td colspan="1">
						<div class="accordian-body collapse <%= record['KNAME'] %>" >
							<span class="glyphicon glyphicon-hdd btn-lg"></span>
							<kbd><%= record['MODEL'] %></kbd>
						</div></td>
						<td style="border-top: none;" colspan="5" class="hiddenRow">
						<div class="accordian-body collapse <%= record['KNAME'] %>" >

							<table class="table table-bordered table-hover">

								<tbody>
									<!--
									record['partitions'] reffrence
									"TYPE"=>"part", "SIZE"=>"104857600", "KNAME"=>"sda1", "MOUNTPOINT"=>nil, "FSTYPE"=>"devtmpfs"
									-->

									<%
									unless record['partitions'].nil?
									for partition in record['partitions'] %>
									<tr>
										<td>
										<%= radio_button_tag(:partition, partition["KNAME"],nil,'data-toggle' => "tooltip",'title' =>"Select this prtition") %>
										</td>
										<td data-toggle="tooltip" title="Mount point"> <%= partition["MOUNTPOINT"] || "No muount point" %> </td>
										<td data-toggle="tooltip" title="Disk name"> <%= partition["KNAME"] %> </td>
										<td data-toggle="tooltip" title="File system type" > <%= partition["FSTYPE"] %> </td>
										<td><span class='glyphicon glyphicon-warning-sign'></span><%= ['tmpfs', 'devtmpfs'].include?(record['FSTYPE']) ? " Unknown" : record['FSTYPE']  %></td>

										<td data-toggle="tooltip" title="Total size" > <%= number_to_human_size partition["SIZE"] %> </td>
									</tr>
									<%
									end
									end %>
								</tbody>
							</table>

						</div></td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Disks Currently in Use</h3>
			</div>
			<% if @mounted_disks.any? %>
			<div class="panel-body">
				<div class="row">
					<% @mounted_disks.each do | disk | %>
					<div class="col-md-6">
						<h5><%= disk[:path] %> <span class="label label-default"> <%= number_to_human_size disk[:bytes_total] %></span></h5>
						<%=
 pie_chart({"Used: #{number_to_human_size disk[:used]}" => (disk[:bytes_total] - disk[:bytes_free]),"Free: #{number_to_human_size disk[:available]}" => disk[:bytes_free]},\
						library: {legend: {position: 'top'}, \
						is3D: true, \
						pieSliceText: 'percentage', \
						tooltip: {text: 'percentage' }, \
						width: 400, \
						slices: [{color: '#A44585'},{color: '#00B5F0'}] \
						})
%>

					</div>
					<% end %>
				</div>
				<% end %>
			</div>

			<div class="row">
				<ul class="pager">
					<li class="previous disabled">
						<a href="#">&larr; Back</a>
					</li>
					<li class="next">
						<%= link_to '#', :onclick => "$('#select_device').submit()" do %>
						Next &rarr;
						<% end %>
					</li>
				</ul>
				</form>
			</div>
		</div>
	</div>
