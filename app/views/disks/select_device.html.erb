<div class="panel-body">
	<div class="row">
		<div class="">
			<table class="table table-bordered table-hover">

				<thead>
					<tr>
						<th>Select</th>
						<th>Model</th>
						<th>Path</th>
						<th>Size</th>
						<th>File System</th>
						<th>Format</th>
					</tr>
				</thead>
				<tbody>
					<% for record in @new_disks%>
					<tr>
						<td>
						<input type="radio" name="optionsRadios" id="optionsRadios1" value="option1" />
						</td>
						<td><%= record['MODEL'] || "N/A"%></td>
						<td><%= "/dev/#{record['KNAME']}"%></td>
						<td><%= number_to_human_size record['SIZE'] %></td>
						<td><span class="glyphicon glyphicon-warning-sign"></span><%= ['tmpfs', 'devtmpfs'].include?(record['FSTYPE']) ? "Unknown" : record['FSTYPE']  %></td>
						<td><label>
							<input type="checkbox" value="">
							Format Disk </label></td>
					</tr>
					<% end %>
				</tbody>

			</table>

		</div>

		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Disks Currently in Use</h3>
			</div>
			<% if @mounted_disks.any? %>
			<div class="panel-body">
				<div class="row">
					<% @mounted_disks.each_slice(2) do | first, second | %>
					<% end %>
					<div class="col-md-6 ">

						<!-- >
