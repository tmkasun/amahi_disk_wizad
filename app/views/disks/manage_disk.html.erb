<div class="panel-body">
	<div class="row">
		<div class="col-md-5 col-md-offset-3 well">
			<ul class="list-group">
				<li class="list-group-item list-group-item-success">
					<h5>What would you like to do with this new drive</h5>

				</li>
				<li class="list-group-item">
					<div class="checkbox">
						<label>
							<input type="checkbox" value=""/>
							<div class="alert alert-info">
								Mount this drive automatically, Your drive will be available in /var/hda/files/drives/drive#
								You will then be able to <a href="#" class="alert-link">create new share</a> in this directory to use this drive

							</div> </label>
					</div>

				</li>

				<li class="list-group-item">

					<div class="checkbox">
						<label>
							<input type="checkbox" value=""/>
							<div class="alert alert-info">
								[Experimental] Add it to your <a href="#" class="alert-link">shared stroage pool</a>

							</div> </label>
					</div>

				</li>

			</ul>
		</div>
	</div>
	<div class="row">
		<ul class="pager">
			<li class="previous">
				<%= link_to file_system_path do %>
				&larr; Back
				<% end %>
			</li>
			<li class="next">
				<%= link_to complete_path do %>
				Next &rarr;
				<% end %>
			</li>
		</ul>

	</div>
</div>